<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jcajamarcaTS2.Vistas.vLogin"
             >
    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">
        <Image Source="login.png"
               HeightRequest="200"/>
        <Label Text="Usuario" Margin="15,10"/>
        <Frame BackgroundColor="White" CornerRadius="50" HeightRequest="45" WidthRequest="300">
            <Entry x:Name="txtUsuario"
                   WidthRequest="200"
                   HeightRequest="40"                  
               Placeholder="Ingrese Usuario"
               MaxLength="7"
                   Margin="5"/>
        </Frame>
        <Label Text="Contraseña" Margin="15,10"/>
        <Frame BackgroundColor="White" CornerRadius="50" HeightRequest="45" WidthRequest="300">
            <Entry x:Name="txtContraseña"
               WidthRequest="200"
               HeightRequest="40"  
               Placeholder="Ingrese la Contraseña"
               IsPassword="True"
                Margin="10"/>
        </Frame>
        <Button x:Name="btnInicio"
                Text="INICIAR SESION"
                CornerRadius="30"
                Clicked="btnInicio_Clicked"
                    Margin="40"/>
    </VerticalStackLayout>
</ContentPage>